# Changing Window Focus
shift + alt - j : yabai -m window --focus south
shift + alt - k : yabai -m window --focus north
shift + alt - h : yabai -m window --focus west
shift + alt - l : yabai -m window --focus east

cmd - j : yabai -m window --swap south
# cmd - k : yabai -m window --swap north
cmd - h : yabai -m window --swap west
# cmd - l : yabai -m window --swap east
# rotate layout clockwise
shift + alt - r : yabai -m space --rotate 270

# flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + alt - x : yabai -m space --mirror x-axis

# toggle window float
shift + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# maximize a window
shift + alt - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
shift + alt - e : yabai -m space --balance

#move window to prev and next space
shift + alt - p : yabai -m window --space prev;
shift + alt - n : yabai -m window --space next;

# move window to space #
shift + alt - 1 : yabai -m window --space 1;
shift + alt - 2 : yabai -m window --space 2;
shift + alt - 3 : yabai -m window --space 3;
shift + alt - 4 : yabai -m window --space 4;
shift + alt - 5 : yabai -m window --space 5;

# stop/start/restart yabai
ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service 
ctrl + alt - r : yabai --restart-service

# Apps
# Obsidian
alt - 1 : open -a /Applications/Obsidian.app
# Mail
alt - 2 : open -a /Applications/Thunderbird\ Beta.app
# Calendar
alt - 3 : open -a /System/Applications/Calendar.app
# Wezterm
alt - 4 : open -a /Applications/Wezterm.app
# Spotify
alt - 5 : open -a /Applications/Spotify.app
# Basecamp
alt - 6 : open -a /Applications/Basecamp\ 3.app
# Arc
alt - 7 : open -a /Applications/Arc.app
# Pycharm
alt - 8 : open -a /Applications/PyCharm.app
# Slack
alt - 9 : open -a /Applications/Slack.app

# Misc
# Sleep
ctrl + alt - s: osascript -e 'tell application "Finder" to sleep'
# Pause Spotify
ctrl + alt - p: osascript -e 'tell application "Spotify" to pause'
# Unpause Spotify
ctrl + alt - u: osascript -e 'tell application "Spotify" to play'
